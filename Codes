import qrcode

code = qrcode.QRCode(
    version=1,
    error_correction = qrcode.constants.ERROR_CORRECT_L,
    box_size=100,
    border=4
)
a = input("Lütfen qr luşturmak istediğiniz adresi yapıştırın:")

code.add_data(a)
code.make(fit=True)

image = code.make_image(fill_color=(8,153,206),back_color="white")
image.save("qrcode.png")
